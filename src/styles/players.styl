.players
  position relative
  display block

.players--hidden
  display none

.player
  float left
  width 50%
  box-sizing border-box

.player-container
  position relative
  padding-bottom 56.25%
  padding-top 30px
  height 0
  overflow hidden

.player-container > iframe
  pointer-events none
  position absolute
  top 0
  left 0
  width 100%
  height 100%
